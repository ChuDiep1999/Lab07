@model dienthoai.Models.user
@{
    ViewBag.Title = "dangnhap";
}

<h2>dangnhap</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @ViewBag.Thongbao
        <div class="form-group-row">
            <label for="txtUsername" class="col-sm-3 col-form-label">User Name</label>
            <div class="col-sm-9">
                @Html.TextBox("txtUsername", "", new { @class = "form-control", @placeholder = "Ten dang nhap" })
                @ViewData["UserError"]
            </div>
        </div>
        <div class="form-group-row">
            <label for="txtPass" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
                @Html.Password("txtPass", "", new { @class = "form-control", @placeholder = "mat khau" })
                @ViewData["PassError"]
            </div>
        </div>
        <div class="form-group-row">
            <input type="submit" value="Đăng Nhập" class="btn btn-success" />
        </div>
    </div>
}